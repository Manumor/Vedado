		<!-- Second page section -->
		<div class="page-section bs-docs-featurette" id="second-section" >
			<div class="container" id="vamos">
				<h1 class="text-center" id="main_form" style="margin-top: 40px;">Gana un viaje a Cuba con tus puros favoritos</h1>
				<p class="lead text-center"> Es muy facil, pon tu nombre y apellido, tu email y una foto del ticket de compra de tus puros Vedado</p>
				<hr class="half-rule">
			</div>
		</div>
		<div class="container" id='form-style' style="min-height: 780px">
			<div class="row">
				<div class="col-sm-4"></div>
				<div class="col-sm-4" style="height: 600px">
					<%= form_for @contestant do |f| %>

					<div class="form-group" style="font-size:30px;  margin-top: 0%;">
						<%= f.label :nombre, "Nombre:" %>
						<%= f.text_field :nombre, class: "form-control", id: "name", placeholder: "Nombre", type: "name" %>
					</div>
					<br>
					<div class="form-group" style="font-size:30px">
						<%= f.label :apellido, "Apellidos:" %>
						<%= f.text_field :apellido, class: "form-control", id: "surname", placeholder: "Apellidos", type: "surname" %>
					</div>
					<br>
					<div class="form-group" style="font-size:30px">
						<%= f.label :email, "Email:"  %>
						<%= f.text_field :email, class: "form-control", id: "email", placeholder: "ejemplo@email.com", type: "email" %>
					</div>
					<br>
					<div class="form-group" style="font-size:30px">
						<%= f.label :email_confirmation, "Confirma tu Email:"  %>
						<%= f.text_field :email_confirmation, class: "form-control", id: "email", placeholder: "ejemplo@email.com", type: "email" %>
					</div>
					<br>
					<div class="form-group" style="font-size:30px">
						<%= f.label :estanco, "Estanco:" %>
						<%= f.text_field :estanco, class: "form-control", id: "estanco", placeholder: "Direccion de estanco de compra" %>
					</div>
					<br>
					<%= f.file_field :foto, class: 'filestyle', id: 'picture', :'data-classButton' => 'btn btn-primary', :'data-input' => 'false', classIcon:  'icon-plus', :'data-buttonText' => 'Sube tu ticket de compra'  %>
					<br><br>
					<button type="submit" class="btn btn-primary btn-lg" style="left: 60%; " id="listed">Apuntame</button>

						<br><br>
						
					<% if @contestant.errors.any? %>
						<div class= "alert alert-danger form-group">
							<ul>
								<li><%= @contestant.errors.first.second %></li>
							</ul>
						</div>
						<% else %>
						<% flash.each do |name, msg| -%>
						<%= content_tag :div, msg, class: "alert alert-success"  %>
						<% end %>
						<% end %>
						<% end %>
						<br>
					</div>

			</div>
		</div>
